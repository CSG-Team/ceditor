{
  "compilerOptions": {
    "module": "esnext",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "lib": [
      "dom",
      "DOM.Iterable",
      "es2015",
      "es2015.promise",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "ESNext"
    ],
    "types": ["vite/client"],
    "paths": {
      "*": ["*"],
      "src": ["src/*"],
      "@component/*": ["src/component/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/utils/config/*"],
      "@constant/*": ["src/constant/*"],
      "@type/*": ["src/type/*"],
      "@image/*": ["src/image/*"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
